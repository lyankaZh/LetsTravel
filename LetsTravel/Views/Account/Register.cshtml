@model LetsTravel.Models.RegisterModel
@{
    Layout = null;
}


<!DOCTYPE html>
<html>
<head>
    <link href='http://fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css'>
    <link href="~/Styles/ValidationStyles.css" rel="stylesheet" />

    <link href="~/Styles/stylesForForm.css" rel="stylesheet" />
    <meta charset="UTF-8">

    <title>Register</title>

</head>

<body style="background: url(http://i.imgur.com/Eor57Ae.jpg) no-repeat fixed center center;" class="body-login-back">
    <style>
        .textarea {
            width: 314px !important;
            height: 50px !important;
            border-radius: 5px;
            border: 1px solid #ccc;
            resize: none
        }

        .text-box {
            width: 314px !important;
            height: 50px !important;
            border-radius: 5px;
            border: 1px solid #ccc;
            resize: none
        }

        #About {
            font-family: Montserrat !important;
        }
    </style>
    <div class="login-block">
        <h3>Please enter your information!</h3>
        @Html.ValidationSummary()
        @using (Html.BeginForm())
        {
            @*@Html.AntiForgeryToken()*@
            <div class="form-group">
                @Html.TextBoxFor(x => x.Nickname, new { @id = "username", placeholder = Html.DisplayNameFor(n => n.Nickname) })
            </div>
            <div class="form-group">
                @Html.TextBoxFor(x => x.FirstName, new { @id = "username", placeholder = Html.DisplayNameFor(n => n.FirstName) })
            </div>
            <div class="form-group">
                @Html.TextBoxFor(x => x.LastName, new { @id = "username", placeholder = Html.DisplayNameFor(n => n.LastName) })
            </div>
            <div class="form-group">
                @Html.TextBoxFor(x => x.Email, new { @id = "username", placeholder = Html.DisplayNameFor(n => n.Email) })
            </div>
            <div class="form-group">
                @Html.PasswordFor(x => x.Password, new { @id = "password", placeholder = Html.DisplayNameFor(n => n.Password) })
            </div>
            <div class="form-group">
                @Html.EditorFor(x => x.About, new { htmlAttributes = new { placeholder = Html.DisplayNameFor(n => n.About) } })
            </div>
            <h3>Who are you?</h3>
            <div class="form-group">
                @Html.LabelFor(d => d.IsGuide)
                <span>@Html.CheckBoxFor(x => x.IsGuide)</span>
            </div>
            <div class="form-group">
                @Html.LabelFor(d => d.IsTraveller)
                <span>@Html.CheckBoxFor(x => x.IsTraveller)</span>
            </div>
            <button type="submit">Register!</button>
        }
    </div>
</body>

</html>